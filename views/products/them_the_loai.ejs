<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Thể Loại</title>
    <link rel="shortcut icon" href="images/ADD.png" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap-5.2.3-dist/css/bootstrap.min.css">
</head>

<%- include('../inc/top') %>
    <!-- Div thân -->
    <div class="col-5 container">


<%   let objSP={}     %>


<div style="padding-top: 23%;">
    <h1 class="text-center ">Danh Sách Thể Loại (Category ) </h1>
  <div class="table-warning">
    <table class="table table-info table-hover border border-dark">
      <thead>
        <tr class="table-warning">
          <th scope="col">Mã Thể Loại</th>
          <th scope="col">Tên Thể Loại</th>
          <th scope="col" class="text-center">Chức năng</th>
        </tr>
      </thead>
      <tbody>
        <% listSP.forEach((row) => { %>
          <tr>
            <td><%= row._id %></td>
            <td><%= row.name %></td>
            <td class="text-center">
              <a href="/edit_tl/<%= row._id %>"> <img src="images/Upload.png"  alt="" height="20px" width="20px"/>  </a>
              <a href="/xoa_tl/<%= row._id %>"><img src="images/Delete.jpg"  alt="" height="20px" width="20px"/></a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  
  <div class="d-flex justify-content-center">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
      <i class="bi bi-plus-lg"></i> Thêm mới Thể Loại
    </button>
  </div>
  



<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-warning">
        <h5 class="modal-title" id="addCategoryModalLabel">Thêm mới Thể Loại</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="" method="post">
          <div class="mb-3">
            <label for="name" class="form-label">Tên Thể Loại:</label>
            <input type="text" name="name" value="<%= objSP.name %>" class="form-control" placeholder="Tên Thể Loại">
          </div>
  
          <div class="text-center mt-4">
            <button type="submit" onclick="thongbao()" class="btn btn-primary w-100">Thêm Thể Loại</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
  
</div>
  











 

    <script src="/bootstrap-5.2.3-dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>